{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "generate_routes": "php artisan ziggy:generate",
        "post_install": "npm run generate_routes && link-module-alias"
    },
    "devDependencies": {
        "autoprefixer": "^10.3.6",
        "axios": "^0.21",
        "laravel-mix": "^6.0.6",
        "link-module-alias": "^1.2.0",
        "lodash": "^4.17.19",
        "postcss": "^8.3.8",
        "tailwindcss": "^2.2.16",
        "vue-loader": "^16.8.1"
    },
    "dependencies": {
        "@inertiajs/inertia": "^0.10.1",
        "@inertiajs/inertia-vue3": "^0.5.2",
        "@inertiajs/progress": "^0.2.6",
        "vue": "^3.2.19",
        "vue-i18n": "^9.2.0-beta.11"
    },
    "_moduleAliases": {
        "@assets": "resources/assets",
        "@": "resources/js"
    },
    "_moduleAliasIgnoreWarning": true
}
